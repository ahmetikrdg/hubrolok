@model Author


<div class="col-lg-3 col-md-6 col-sm-6 p-right-15">
    <div class="team__item set-bg" data-setbg="/img/@Model.Image">
        <div class="team__item__text">
            <a asp-controller="home" asp-action="AuthorDetails" asp-route-author="@Model.Url"><h4 style="color:white">@Model.NameSurname</h4></a>
            <p>@Model.Description</p>
            <div class="team__item__social">
                @*  <a style="margin-right: 0px" href="#"><i class="fa fa-facebook"></i></a>  *@
                <a style="margin-right: 0px" href="@Model.Twitter"><i class="fa fa-twitter"></i></a>
                <a style="margin-right: 0px" href="@Model.Linkedin"><i class="fa fa-linkedin"></i></a>
            </div>
        </div>
    </div>
</div>
